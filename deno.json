{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "deno.ns"],
    "allowJs": true,
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "solid-js"
  },
  "imports": {
    "@hono/vite-dev-server": "npm:@hono/vite-dev-server@^0.19.0",
    "@hono/zod-validator": "npm:@hono/zod-validator@^0.5.0",
    "@prisma/client": "npm:@prisma/client@^6.8.2",
    "@solidjs/testing-library": "npm:@solidjs/testing-library@^0.8.10",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.4",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.7",
    "@testing-library/jest-dom": "npm:@testing-library/jest-dom@^6.0.0",
    "@zip-js/zip-js": "jsr:@zip-js/zip-js@^2.7.62",
    "esbuild": "npm:esbuild@^0.20.0",
    "hono": "npm:hono@^4.7.9",
    "jotai": "npm:jotai@^2.12.4",
    "mongoose": "npm:mongoose@^8.15.0",
    "solid-jotai": "npm:solid-jotai@^0.3.1",
    "solid-js": "npm:solid-js@^1.9.6",
    "solid-testing-library": "npm:@solidjs/testing-library@^0.8.10",
    "vitest": "npm:vitest@^2.1.8",
    "tailwindcss": "npm:tailwindcss@^4.1.7",
    "vite": "npm:vite@^5.4.19",
    "vite-plugin-solid": "npm:vite-plugin-solid@^2.11.6",
    "zod": "npm:zod@^3.24.4"
  },
  "tasks": {
    "test": "deno test --allow-all tests/",
    "test:extension": "deno test --allow-all tests/extension-system.test.ts",
    "test:websocket": "deno test --allow-all tests/websocket-events.test.ts",
    "test:activitypub": "deno test --allow-all tests/activitypub.test.ts",
    "test:ui": "deno test --allow-all tests/ui-components.test.tsx",
    "test:watch": "deno test --allow-all --watch tests/",
    "test:coverage": "deno test --allow-all --coverage=coverage tests/",
    "dev": "deno run --allow-all --watch src/manage.ts",
    "lint": "deno lint src/",
    "fmt": "deno fmt src/ tests/"
  },
  "fmt": {
    "files": {
      "include": ["src/", "tests/"],
      "exclude": ["node_modules/", "dist/"]
    }
  },
  "lint": {
    "files": {
      "include": ["src/", "tests/"],
      "exclude": ["node_modules/", "dist/"]
    }
  }
}
