MONGO_URI=mongodb://localhost:27017/takos-host
ROOT_DOMAIN=takos.jp
FREE_PLAN_LIMIT=1
# 使用禁止サブドメインをカンマ区切りで指定
RESERVED_SUBDOMAINS=www,admin

# リレーサーバーのポーリング間隔(ms)
RELAY_POLL_INTERVAL=300000
# 利用規約(テキストまたは Markdown)のファイルパス
# 例: TERMS_FILE=./terms.md
TERMS_FILE=

# メール送信用設定
# SMTP_HOST と MAIL_FROM を指定すると確認メールを送信します
# SMTP_PORT, SMTP_USER, SMTP_PASS は必要に応じて設定してください
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
MAIL_FROM=
